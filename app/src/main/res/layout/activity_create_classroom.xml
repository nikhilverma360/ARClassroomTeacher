<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateClassroom">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:lottie_autoPlay="true"
        app:lottie_fileName="loginanim.json"
        app:lottie_loop="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:fontFamily="sans-serif-black"
        android:text="Create Class"
        android:textColor="#ffffff"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/classnametxt"
        app:layout_constraintEnd_toEndOf="@+id/classnametxt"
        app:layout_constraintStart_toStartOf="@+id/classnametxt" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/subjecttxt"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Subject"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roomtxt"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:outlineSpotShadowColor="#ffffff"
        android:shadowColor="#ffffff"
        android:outlineAmbientShadowColor="#ffffff"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/roomtxt"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Room"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sectiontxt"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:outlineSpotShadowColor="#ffffff"
        android:shadowColor="#ffffff"
        android:outlineAmbientShadowColor="#ffffff"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/sectiontxt"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Section"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/classnametxt"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:outlineSpotShadowColor="#ffffff"
        android:shadowColor="#ffffff"
        android:outlineAmbientShadowColor="#ffffff"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/classnametxt"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:hint="Class Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:outlineSpotShadowColor="#ffffff"
        android:shadowColor="#ffffff"
        android:outlineAmbientShadowColor="#ffffff"/>

    <Button
        android:id="@+id/createbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Create"
        app:layout_constraintEnd_toEndOf="@+id/subjecttxt"
        app:layout_constraintStart_toStartOf="@+id/subjecttxt"
        app:layout_constraintTop_toBottomOf="@+id/subjecttxt"
        android:textStyle="bold"
        android:background="@drawable/btnclr"/>
</androidx.constraintlayout.widget.ConstraintLayout>